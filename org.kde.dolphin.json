{
    "id": "org.kde.dolphin",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "dolphin",
    "finish-args": [ "--device=dri",
                     "--share=ipc",
                     "--share=network",
                     "--socket=x11",
                     "--socket=wayland",
                     "--filesystem=home",
                     "--filesystem=/run/media",
                     "--talk-name=org.kde.kiod5",
                     "--talk-name=org.kde.JobViewServer",
                     "--talk-name=org.kde.kpasswdserver",
                     "--system-talk-name=org.freedesktop.UDisks2" ],
    "rename-icon": "system-file-manager",
    "cleanup": [
        "/lib/cmake",
        "/lib/pkgconfig",
        "/include",
        "/docs",
        "/mkspecs",
        "/share/man",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "lmdb",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/LMDB/lmdb/archive/LMDB_0.9.24.tar.gz",
                    "sha256": "44602436c52c29d4f301f55f6fd8115f945469b868348e3cddaf91ab2473ea26"
                }
            ],
            "no-autogen": true,
            "make-install-args": ["prefix=/app"],
            "subdir" : "libraries/liblmdb"
        },
        {
            "config-opts": ["-DENABLE_TESTING=OFF" , "-DLMDB_DIR=/app"],
            "name": "baloo",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.69/baloo-5.69.0.tar.xz",
                    "sha256": "4a996feade929cb6913382e5993f20972a5dc066fbfead13a02f9798ea80c85b"
                }
            ]
        },
        {
            "config-opts": ["-DENABLE_TESTING=OFF" , "-DLMDB_DIR=/app"],
            "name": "baloo-widgets",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.04.1/src/baloo-widgets-20.04.1.tar.xz",
                    "sha256": "00f271d90c92ac4be978270fee323a8e8617cb975e0ea7d7ecb1b00d773a9bf4"
                }
            ]
        },
        {
            "name": "dolphin",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "for icon_size in 16 22 32 48 64 128; do install -Dm644 src/icons/${icon_size}-system-file-manager.png /app/share/icons/hicolor/${icon_size}x${icon_size}/apps/system-file-manager.png; done",
                "mv /app/bin/{dolphin,dolphin-bin}",
                "install run_dolphin.sh /app/bin/dolphin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.04.1/src/dolphin-20.04.1.tar.xz",
                    "sha256": "ba5db89b338d29c5fa492fc7ce08304427d8db51775fe5a4d34b444034d02577"
                },
                {
                    "type": "shell",
                    "commands": [
                        "mv org.kde.{dolphin,freedesktop}.FileManager1.service.in",
                        "sed -e 's/dolphin.FileManager1/freedesktop.FileManager1/g' -i CMakeLists.txt",
                        "sed -e 's/dolphinDBusService/dolphinDBusService(KDBusService::NoExitOnFailure)/' -i src/main.cpp"
                    ]
                },
                {
                    "type": "file",
                    "path": "run_dolphin.sh"
                }
            ]
        },
        {
            "name": "dolphin-plugins",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.04.1/src/dolphin-plugins-20.04.1.tar.xz",
                    "sha256": "f97c2b77d1b4fd74a2e4a242b5b9a66f7d8f05a185d012ee5646d5f38c26e489"
                }
            ]
        },
        {
            "name": "libusb1",
            "config-opts": [ "--enable-udev=no" ],
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libusb/libusb/releases/download/v1.0.23/libusb-1.0.23.tar.bz2",
                    "sha256": "db11c06e958a82dac52cf3c65cb4dd2c3f339c8a988665110e0d24d19312ad8d"
                }
            ]
        },
        {
            "name": "libmtp",
            "config-opts": [ "--with-udev=/app/lib/udev" ],
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/libmtp/files/libmtp/1.1.17/libmtp-1.1.17.tar.gz",
                    "sha256": "f8a34cf52d9f9b9cb8c7f26b12da347d4af7eb904c13189602e4c6b62d1a79dc"
                }
            ]
        },
        {
            "name": "libssh",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libssh.org/files/0.9/libssh-0.9.4.tar.xz",
                    "sha256": "150897a569852ac05aac831dc417a7ba8e610c86ca2e0154a99c6ade2486226b"
                }
            ]
        },
        {
            "name": "kio-extras",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.04.1/src/kio-extras-20.04.1.tar.xz",
                    "sha256": "4a81b3f8f81fa7b6d0677d6706bbb9c995db27643ce40fca6501c2c56c2d8f33"
                }
            ]
        },
        {
            "name": "ark",
            "cleanup": [ "/share/icons", "/share/doc", "/share/man", "/share/config.kcfg", "/share/kxmlgui5" ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.04.1/src/ark-20.04.1.tar.xz",
                    "sha256": "3c0e213917c3b87b12bab32499f13b99df36866b94b46705cbb01e468372ab3c"
                }
            ]
        }
    ]
}
