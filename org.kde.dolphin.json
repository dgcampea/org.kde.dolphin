{
    "id": "org.kde.dolphin",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "run_dolphin.sh",
    "finish-args": [ "--share=ipc",
                     "--socket=x11",
                     "--socket=wayland",
                     "--filesystem=home",
                     "--filesystem=/run/media",
                     "--talk-name=org.kde.JobViewServer" ],

    "modules": [
        {
            "config-opts": [ "-DENABLE_TESTING=OFF" ],
            "name": "kfilemetadata",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.57/kfilemetadata-5.57.0.tar.xz",
                    "sha256": "49e6c281fdffd4f5fe363c6cefdb6c3022ef57c935d7d6b135607cdde9b2d116"
                }
            ]
        },
        {
            "name": "lmdb",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/LMDB/lmdb/archive/LMDB_0.9.23.tar.gz",
                    "sha256": "abf42e91f046787ed642d9eb21812a5c473f3ba5854124484d16eadbe0aa9c81"
                }
            ],
            "no-autogen": true,
            "make-install-args": ["prefix=/app"],
            "subdir" : "libraries/liblmdb"
        },
        {
            "config-opts": ["-DENABLE_TESTING=OFF" , "-DLMDB_DIR=/app"],
            "name": "baloo",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.57/baloo-5.57.0.tar.xz",
                    "sha256": "32ab4ed2d295fe734a4a475403dea72e2feef27f662ae64c841c410eb7bb3dd3"
                }
            ]
        },
        {
            "config-opts": ["-DENABLE_TESTING=OFF" , "-DLMDB_DIR=/app"],
            "name": "baloo-widgets",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/applications/19.04.0/src/baloo-widgets-19.04.0.tar.xz",
                    "sha256": "ab3d83bb1f2007620273d1a3eb580d821e0655aaf7e3efd2dc81087a24d1c275"
                }
            ]
        },
        {
            "name": "dolphin",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "for icon_size in 16 22 32 48 64 128; do
                     install -d /app/share/icons/hicolor/${icon_size}x${icon_size}/apps
                     install -m644 src/icons/${icon_size}-system-file-manager.png /app/share/icons/hicolor/${icon_size}x${icon_size}/apps/org.kde.dolphin.png
                 done",
                "install run_dolphin.sh /app/bin/run_dolphin.sh"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/applications/19.04.0/src/dolphin-19.04.0.tar.xz",
                    "sha256": "f3f45b9048c283252067eebfad8c6e1efc6bc64d43fcba78b933850ea4762375"
                },
                {
                    "type": "patch",
                    "path": "dolphinpatch.patch"
                },
                {
                    "type": "patch",
                    "path": "dolphin-icon.patch"
                },
                {
                    "type": "file",
                    "path": "run_dolphin.sh"
                }
            ]
        },
        {
            "name": "dolphin-plugins",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/applications/19.04.0/src/dolphin-plugins-19.04.0.tar.xz",
                    "sha256": "c2898e0a64d5a9eab2a4bd661694b75805adfd0a925f1a21f894892264f96469"
                }
            ]
        },
        {
            "name": "kio-extras",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/applications/19.04.0/src/kio-extras-19.04.0.tar.xz",
                    "sha256": "0f3f2eaf40512cf4a61b09b94ca365d7d05c7b1a75f4e8afd047143a8e962d85"
                }
            ]
        },
        {
            "name": "ark",
            "cleanup": [ "/share/icons", "/share/doc", "/share/man", "/share/config.kcfg", "/share/kxmlgui5" ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/applications/19.04.0/src/ark-19.04.0.tar.xz",
                    "sha256": "35e8e516a8554e086264d9a9a4fa66c2b47fa227eb9e512a1d0d24172cd07a84"
                }
            ]
        }
    ]
}
