{
    "id": "org.kde.dolphin",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "run_dolphin.sh",
    "finish-args": [ "--device=dri",
                     "--share=ipc",
                     "--share=network",
                     "--socket=x11",
                     "--socket=wayland",
                     "--filesystem=home",
                     "--filesystem=/run/media",
                     "--talk-name=org.kde.kiod5",
                     "--talk-name=org.kde.JobViewServer",
                     "--talk-name=org.kde.kpasswdserver",
                     "--system-talk-name=org.freedesktop.UDisks2" ],
    "cleanup": [
        "/lib/cmake",
        "/lib/pkgconfig",
        "/include",
        "/docs",
        "/mkspecs",
        "/share/man",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "config-opts": [ "-DENABLE_TESTING=OFF" ],
            "name": "kfilemetadata",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.61/kfilemetadata-5.61.0.tar.xz",
                    "sha256": "15f20af053c71c1e5ba6c6ade90b7cce27645b27ee30f1e6e73038e81a2c958e"
                }
            ]
        },
        {
            "name": "lmdb",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/LMDB/lmdb/archive/LMDB_0.9.23.tar.gz",
                    "sha256": "abf42e91f046787ed642d9eb21812a5c473f3ba5854124484d16eadbe0aa9c81"
                }
            ],
            "no-autogen": true,
            "make-install-args": ["prefix=/app"],
            "subdir" : "libraries/liblmdb"
        },
        {
            "config-opts": ["-DENABLE_TESTING=OFF" , "-DLMDB_DIR=/app"],
            "name": "baloo",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.61/baloo-5.61.0.tar.xz",
                    "sha256": "dd559e06237843f51d68eb5001b835037d4b2f6d62b7dc4d040961f9863632f1"
                }
            ]
        },
        {
            "config-opts": ["-DENABLE_TESTING=OFF" , "-DLMDB_DIR=/app"],
            "name": "baloo-widgets",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/applications/19.08.1/src/baloo-widgets-19.08.1.tar.xz",
                    "sha256": "83429a70de735edc4714dc1b6f1a5a8c7d3d68a93165e98d2cadeecafa82af7b"
                }
            ]
        },
        {
            "name": "dolphin",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "for icon_size in 16 22 32 48 64 128; do
                     install -d /app/share/icons/hicolor/${icon_size}x${icon_size}/apps
                     install -m644 src/icons/${icon_size}-system-file-manager.png /app/share/icons/hicolor/${icon_size}x${icon_size}/apps/org.kde.dolphin.png
                 done",
                "install run_dolphin.sh /app/bin/run_dolphin.sh"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/applications/19.08.1/src/dolphin-19.08.1.tar.xz",
                    "sha256": "a612dac0cf50301af46ad5fa29aad630bb33a8a4bd416a4d6023b65fb00f25cc"
                },
                {
                    "type": "patch",
                    "path": "dolphinpatch.patch"
                },
                {
                    "type": "patch",
                    "path": "dolphin-icon.patch"
                },
                {
                    "type": "file",
                    "path": "run_dolphin.sh"
                }
            ]
        },
        {
            "name": "dolphin-plugins",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/applications/19.08.1/src/dolphin-plugins-19.08.1.tar.xz",
                    "sha256": "ce2452d9f878dfcff45739ff9eb4a3bde69c449c36182dee6b768f362e75ae2e"
                }
            ]
        },
        {
            "name": "libusb1",
            "config-opts": [ "--enable-udev=no" ],
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libusb/libusb/releases/download/v1.0.22/libusb-1.0.22.tar.bz2",
                    "sha256": "75aeb9d59a4fdb800d329a545c2e6799f732362193b465ea198f2aa275518157"
                }
            ]
        },
        {
            "name": "libmtp",
            "config-opts": [ "--with-udev=/app/lib/udev" ],
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/libmtp/files/libmtp/1.1.16/libmtp-1.1.16.tar.gz",
                    "sha256": "5b68f9dd1ed38de558de687f40e255a39e4d5e32ef3de601f0ac19dd5682bba0"
                }
            ]
        },
        {
            "name": "libssh",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libssh.org/files/0.9/libssh-0.9.0.tar.xz",
                    "sha256": "25303c2995e663cd169fdd902bae88106f48242d7e96311d74f812023482c7a5"
                }
            ]
        },
        {
            "name": "kio-extras",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/applications/19.08.1/src/kio-extras-19.08.1.tar.xz",
                    "sha256": "de0ba7f3ce73db34b878cb88e36711d6b31aad57a5a735744330f92920666c52"
                }
            ]
        },
        {
            "name": "ark",
            "cleanup": [ "/share/icons", "/share/doc", "/share/man", "/share/config.kcfg", "/share/kxmlgui5" ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/applications/19.08.1/src/ark-19.08.1.tar.xz",
                    "sha256": "b5638bc4559d775d0a0c2aee022cadc021543bf92e8be6b9b803c50e7e7f1835"
                }
            ]
        }
    ]
}
